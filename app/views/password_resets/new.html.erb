<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-700">Reset Password</h2>
  </div>
  <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">

      <%= form_with model: @user, url: password_reset_path, class:"space-y-6" do |f| %>


        <div class="py-2">
          <%= f.label :email, class:"block text-sm font-medium leading-6 text-gray-700", for:"email"  %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block w-full rounded-md border-0 py-1.5 text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1.5 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <%= f.submit "Login", class:"flex w-full justify-center rounded-md bg-gray-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"%>
        </div>
      <% end %>
    </div>
  </div>
</div>